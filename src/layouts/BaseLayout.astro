---
import '../styles/index.scss';
import * as global from '../global';
import HeadCommon from '../components/HeadCommon.astro';
import Header from '../components/Header.astro';
import LeftSidebar from '../components/LeftSidebar.astro';
import ClientScript from '../components/ClientScript.astro';

type Props = {
  title: string;
};

const { title } = Astro.props as Props;
---

<html lang="zh-CN" class="initial">
  <head>
    <HeadCommon />
    <title>
      {title ? `${title} - ${global.title}` : global.title}
    </title>
  </head>

  <body>
    <Header />
    <main class="layout">
      <aside id="grid-left" class="grid-sidebar">
        <LeftSidebar />
      </aside>
      <slot />
    </main>
    <ClientScript />
  </body>
</html>

<style lang="scss" is:global>
  body {
    width: 100%;
    display: grid;
    grid-template-rows: var(--theme-navbar-height) 1fr;
    --gutter: 0.5rem;
    --doc-padding: 2rem;
  }

  .layout {
    display: grid;
    grid-auto-flow: column;
    grid-template-columns: minmax(var(--gutter), 1fr) minmax(0, var(--max-width)) minmax(var(--gutter), 1fr);
    overflow-x: hidden;
  }

  .grid-sidebar {
    height: 100vh;
    position: sticky;
    top: 0;
    padding: 0;
  }

  #grid-left {
    position: fixed;
    background-color: var(--theme-bg);
    z-index: 10;
    display: none;
  }

  #grid-main {
    padding: var(--doc-padding) var(--gutter);
    grid-column: 2;
    height: 100%;
  }

  #grid-right {
    display: none;
  }

  @media (min-width: 50em) {
    .layout {
      overflow: initial;
      grid-template-columns: 16rem minmax(0, var(--max-width));
      gap: 1rem;
    }

    #grid-left {
      display: flex;
      // padding-left: 2rem;
      position: sticky;
      grid-column: 1;
    }
  }

  @media (min-width: 72em) {
    .layout {
      grid-template-columns: 16rem minmax(0, var(--max-width)) 16rem;
      padding-left: 0;
      padding-right: 0;
      margin: 0 auto;
    }

    #grid-right {
      grid-column: 3;
      display: flex;
    }
  }

  .layout > * {
    width: 100%;
  }

  .mobile-sidebar-toggle {
    overflow: hidden;
  }

  .mobile-sidebar-toggle #grid-left {
    display: block;
    top: 2rem;
  }
</style>
